<% layout("/layouts/boilerplate.ejs")%>

<div class="mt-3">
    <h3 class="ms-4">Edit your listing</h3>
    <form  class="row" method="POST" action="/listings/<%= listing._id %>?_method=PUT">
            <div class="col-10 offset-1">
                <label for="title" class="form-label">Title</label>
                <input name="title" class="form-control" id="title" type="text" placeholder="enter title" value="<%= listing.title%>"> <br>
                
                <label for="description" class="form-label">Title</label>
                <textarea rows="4" name="description" id="description" class="form-control" placeholder="enter description" required><%=listing.description%></textarea> <br>

                <label for="image">Image URL</label>
                <input name="image" class="form-control" id="image" type="url" placeholder="enter image link/url" value="<%=listing.image%>"> <br>

                <div class="row">
                    
                    <div class="col-4">
                        <label for="price" class="form-label">Price/night</label>
                        <input name="price" id="price" class="form-control" type="number" placeholder="enter price" value="<%=listing.price%>" required> <br>
                    </div>
                    <div class="col-8">

                        <label for="country">Country</label>
                        <input type="text" class="form-control" id="country" placeholder="Enter Country" value="<%=listing.country%>" required> <br>
                    </div>
                </div>

                <label for="location">Locaiton</label>
                <input name="location" class="form-control" id="location" type="text" placeholder="enter locaiton" value="<%=listing.location%>" required> <br>

                <button class="btn edit-btn">Edit</button>
            </div>
        </div>
    </form>
</body>
